<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Produits</title>
    <style>
        body {
            font-family: Arial;
            background: #f9f9f9;
            padding: 10px;
        }
        .item {
            background: white;
            border: 1px solid #ccc;
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <h2>Liste des Produits</h2>
    <div id="liste"></div>

    <script>
        fetch('https://web-production-3b9e.up.railway.app/liste_produits')
            .then(response => response.json())
            .then(data => {
                const container = document.getElementById('liste');
                data.forEach(produit => {
                    const div = document.createElement('div');
                    div.className = 'item';
                    div.innerHTML = `
                        <strong>${produit.numero_item}</strong><br>
                        Désignation : ${produit.DESIGNATION}<br>
                        Code-barres : ${produit.BAR}<br>
                        Prix : ${produit.PRIX}<br>
                        Quantité : ${produit.QTE}
                    `;
                    container.appendChild(div);
                });
            })
            .catch(error => {
                document.getElementById('liste').innerHTML = 'Erreur lors du chargement';
                console.error(error);
            });
    </script>
</body>
</html>
